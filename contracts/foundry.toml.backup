[profile.default]
src = "src"
out = "out"
libs = ["lib"]
solc_version = "0.8.24"
optimizer = true
optimizer_runs = 200
via_ir = false

[profile.default.fuzz]
runs = 256

[profile.default.invariant]
runs = 256
depth = 15

[rpc_endpoints]
mantle_sepolia = "${MANTLE_SEPOLIA_RPC}"
mantle_mainnet = "${MANTLE_MAINNET_RPC}"

[etherscan]
mantle_sepolia = { key = "${ETHERSCAN_API_KEY}", url = "https://explorer.sepolia.mantle.xyz/api" }
mantle_mainnet = { key = "${ETHERSCAN_API_KEY}", url = "https://explorer.mantle.xyz/api" }

[rpc_endpoints]
base_sepolia = "https://sepolia.base.org"
ethereum_sepolia = "https://rpc.sepolia.org"
